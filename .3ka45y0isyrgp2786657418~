<script type="text/javascript">

    function calcPrice() {
        var totalPrice = 0;
        for (var i = 0; i < document.nike.type.length; i++)
            if (document.nike.type[i].checked == true) {
                totalPrice += (parseInt(document.nike.type[i].value));
            }

        for (var i = 0; i < document.nike.color.length; i++)
            if (document.nike.color[i].checked == true) {
                totalPrice += (parseInt(document.nike.color[i].value));
            }

        for (var i = 0; i < document.nike.shoes.length; i++)
            if (document.nike.shoes[i].checked == true) {
                totalPrice += (parseInt(document.nike.shoes[i].value));
                //alert(document.f1.color[i].value+" , "+ totalPrice);
            }

        for (var i = 0; i < document.nike.shoes2.length; i++)
            if (document.nike.shoes2[i].checked == true) {
                totalPrice += (parseInt(document.nike.shoes2[i].value));
                //alert(document.f1.color[i].value+" , "+ totalPrice);
            }

        for (var i = 0; i < document.nike.shoes3.length; i++)
            if (document.nike.shoes3[i].checked == true) {
                totalPrice += (parseInt(document.nike.shoes3[i].value));
                //alert(document.f1.color[i].value+" , "+ totalPrice);
            }

        totalPrice = totalPrice * parseInt(document.nike.pair.value);
        alert("The price of your order will be R" + totalPrice);

    }
</script>
